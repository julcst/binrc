{
    "encoding": {
        "otype": "Composite",
        "nested": [
            {
                "n_dims_to_encode": 3,
                "otype": "Grid",
                "type": "Hash",
                "n_levels": 16,
                "n_features_per_level": 2,
                "log2_hashmap_size": 15,
                "base_resolution": 16,
                "per_level_scale": 2.0,
                "interpolation": "Linear"
            },
            // {
            //     "n_dims_to_encode": 3,
            //     "otype": "TriangleWave",
            //     "n_frequencies": 10
            // },
            {
                "n_dims_to_encode": 5,
                "otype": "OneBlob",
                "n_bins": 4
            },
            {
                "otype": "Identity"
            }
        ]
    },
    "network": {
        //"otype": "FullyFusedMLP",
        "otpye": "CutlassMLP",
        "activation": "ReLU",
        "output_activation": "None",
        "n_neurons": 64,
        "n_hidden_layers": 5
    },
    "loss": {
        //"otype": "L1",
        //"otype": "L2",
        //"otype": "RelativeL1Luminance" // L1 produces sharper Caustics
        "otype": "RelativeL2Luminance"
    },
    "optimizer": {
        "otype": "EMA",
        "decay": 0.99,
        "nested": {
            "otype": "Adam",
            // "learning_rate": 1e-3, // default
            "learning_rate": 1e-2,
            "beta1": 0.9,
            "beta2": 0.999,
            // "epsilon": 1e-8, // default
            "epsilon": 1e-15, 
            // "l2_reg": 0, // default
            "l2_reg": 1e-6,
            "absolute_decay": 0,
            "relative_decay": 0,
            "adabound": false
        }
    }
}